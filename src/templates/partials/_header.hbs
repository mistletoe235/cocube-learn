                    <a href="https://microblocks.fun/" class="menu__link">MicroBlocks.fun</a>
                </li> --}}
            </ul>

            <div class="menu__lang">
                <label for="site-language" class="visually-hidden">Site Language</label>
                <select id="site-language" class="locale menu__lang-select" onchange="setLang(this.value)">
                    {{#each locales}}
                    <option value={{this}}>{{this}}</option>
                    {{/each}}
                </select>
                <script>
                    document.querySelector('select.locale').value =
                        document.documentElement.lang;
                </script>
            </div>

        </div>


        <!-- Black area contents -->
        <div class="menu__black">
            {{#if (eq @root.locale.code 'cn')}}
            <a href="https://microblocks.cocube.fun/" class="menu__black-link" target="_blank">{{@root.locale.run-nav-item}}</a>
            {{else}}
            <a href="https://microblocks.fun/run/microblocks.html#scripts=GP%20Scripts%0Adepends%20%27CoCube%27" class="menu__black-link" target="_blank">{{@root.locale.run-nav-item}}</a>
            {{/if}}
        </div>


