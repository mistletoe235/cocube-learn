<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Ê£ÄÊµãÊòØÂê¶‰∏∫ÁßªÂä®ËÆæÂ§á
        function isMobileDevice() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }
        
        // Ê£ÄÊµã markdown ÂÜÖÂÆπ‰∏≠ÊòØÂê¶Êúâ show-mobile-notice Ê†áËÆ∞
        var articleContent = document.querySelector('.v_activity__contents');
        var mobileNotice = document.querySelector('.mobile-only-notice');
        
        if (articleContent && mobileNotice) {
            // Êü•Êâæ HTML Ê≥®Èáä
            var hasNoticeMarker = articleContent.innerHTML.indexOf('show-mobile-notice') !== -1;
            
            // Â¶ÇÊûúÊòØÁßªÂä®ËÆæÂ§á‰∏îÊúâÊ†áËÆ∞,ÂàôÊòæÁ§∫ÊèêÁ§∫
            if (isMobileDevice() && hasNoticeMarker) {
                mobileNotice.style.display = 'block';
            }
        }

        // Â§çÂà∂ÁΩëÂùÄÂäüËÉΩ
        var copyBtn = document.querySelector('.copy-url-btn');
        if (copyBtn) {
            copyBtn.addEventListener('click', function() {
                var url = this.getAttribute('data-url');
                var failedText = this.getAttribute('data-failed-text');
                var feedback = document.querySelector('.copy-feedback');
                
                // ‰ΩøÁî®Áé∞‰ª£ Clipboard API
                if (navigator.clipboard && navigator.clipboard.writeText) {
                    navigator.clipboard.writeText(url).then(function() {
                        // Â§çÂà∂ÊàêÂäü
                        showCopyFeedback(feedback, copyBtn);
                    }).catch(function(err) {
                        // Â¶ÇÊûúÂ§±Ë¥•,‰ΩøÁî®Â§áÁî®ÊñπÊ≥ï
                        fallbackCopy(url, feedback, copyBtn, failedText);
                    });
                } else {
                    // ‰∏çÊîØÊåÅ Clipboard API,‰ΩøÁî®Â§áÁî®ÊñπÊ≥ï
                    fallbackCopy(url, feedback, copyBtn, failedText);
                }
            });
        }

        // ÊòæÁ§∫Â§çÂà∂ÊàêÂäüÂèçÈ¶à
        function showCopyFeedback(feedback, btn) {
            if (feedback) {
                feedback.style.display = 'inline';
                btn.style.opacity = '0.6';
                
                setTimeout(function() {
                    feedback.style.display = 'none';
                    btn.style.opacity = '1';
                }, 2000);
            }
        }

        // Â§áÁî®Â§çÂà∂ÊñπÊ≥ï(ÂÖºÂÆπÊóßÊµèËßàÂô®)
        function fallbackCopy(text, feedback, btn, failedText) {
            var textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                var successful = document.execCommand('copy');
                if (successful) {
                    showCopyFeedback(feedback, btn);
                } else {
                    alert(failedText + ' ' + text);
                }
            } catch (err) {
                alert(failedText + ' ' + text);
            }
            
            document.body.removeChild(textArea);
        }

        // ÁõÆÂΩïÊäòÂè†ÂäüËÉΩ
        var toggles = document.querySelectorAll('.contents_toggle');
        toggles.forEach(function(toggle) {
            toggle.addEventListener('click', function() {
                var submenu = this.nextElementSibling;
                var arrow = this.querySelector('.arrow');
                if (submenu.style.display === 'block' || submenu.style.display === '') {
                    submenu.style.display = 'none';
                    arrow.innerHTML = '&#9654;';
                } else {
                    submenu.style.display = 'block';
                    arrow.innerHTML = '&#9660;';
                }
            });
        });

        // ÁßªÂä®Á´Ø‰æßËæπÊ†èÂàáÊç¢
        var sidebarToggle = document.querySelector('.sidebar-toggle');
        var sidebar = document.getElementById('sidebar');
        var sidebarClose = document.querySelector('.sidebar-close');
        
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', function(e) {
                e.preventDefault();
                if (sidebar.classList.contains('sidebar--open')) {
                    sidebar.classList.remove('sidebar--open');
                    document.body.style.overflow = '';
                } else {
                    sidebar.classList.add('sidebar--open');
                    document.body.style.overflow = 'hidden';
                }
            });
        }
        
        if (sidebarClose) {
            sidebarClose.addEventListener('click', function(e) {
                e.preventDefault();
                sidebar.classList.remove('sidebar--open');
                document.body.style.overflow = '';
            });
        }

        // ÁÇπÂáª‰æßËæπÊ†èÂ§ñÈÉ®ÂÖ≥Èó≠
        document.addEventListener('click', function(e) {
            if (sidebar.classList.contains('sidebar--open')) {
                if (!sidebar.contains(e.target) && !sidebarToggle.contains(e.target)) {
                    sidebar.classList.remove('sidebar--open');
                    document.body.style.overflow = '';
                }
            }
        });
    });
</script>

